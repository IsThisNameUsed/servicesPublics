<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/header"/>

    <RelativeLayout
        android:id="@+id/searchLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/details_vote_table"
        android:layout_below="@id/header"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/searchDeputyRadio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:onClick="onRadioButtonClicked"
                android:text="recherche par député" />

            <RadioButton
                android:id="@+id/searchVoteRadio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onRadioButtonClicked"
                android:text="recherche par vote" />
        </RadioGroup>

        <AutoCompleteTextView
            android:id="@+id/name_inputField"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:layout_below="@id/radioGroup"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:hint="name"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:textSize="15sp" />

    </RelativeLayout>

    <ScrollView
        android:id="@+id/details_vote_table_scrollView"
        android:contentDescription="table de résultat des 10 derniers votes"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_above="@id/footer"
        android:layout_below="@id/searchLayout"
        android:visibility="visible">

        <TableLayout
            android:id="@+id/details_vote_table"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:isScrollContainer="true">
        </TableLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/deputyDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_below="@id/header"
        android:gravity="center_horizontal"
        android:visibility="invisible">

        <TextView
          android:id="@+id/deputyName"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:textStyle="bold"
          android:textSize="20sp"
          android:text="Nom député"/>
        <TextView
            android:id="@+id/deputyJob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:layout_below="@id/deputyName"
            android:text="métier député"/>
        <TextView
            android:id="@+id/deputyGroupeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:layout_below="@id/deputyJob"
            android:text="Nom parti"/>
        <TextView
            android:id="@+id/circonscriptionDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:layout_below="@id/deputyGroupeName"
            android:text="Nom circo + num departement"/>
        <TextView
            android:id="@+id/deputyMail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:layout_below="@id/circonscriptionDetails"
            android:text="email"/>
        <TextView
            android:id="@+id/deputyWebSite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:layout_below="@id/deputyMail"
            android:text="website"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/voteDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_below="@id/header"
        android:gravity="center_horizontal"
        android:visibility="invisible">
        <LinearLayout
            android:id="@+id/voteTitleLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/voteTitleDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="Vote:"/>
        <TextView
            android:id="@+id/voteTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="qdqdfqdfqfqdsfqf"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/nbVoteForlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_below="@id/voteTitleLayout"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/nbVoteForDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="Nombre votant pour"/>
            <TextView
                android:id="@+id/nbVoteFor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:textSize="18sp"
                android:text="sqdqsdqsddqsd"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/nbVoteAgainstLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_below="@id/nbVoteForlayout"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/nbVoteAgainstDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_below="@id/nbVoteFor"
                android:text="Nombre votants contre:"/>
            <TextView
                android:id="@+id/nbVoteAgainst"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:textSize="18sp"
                android:layout_below="@id/nbVoteFor"
                android:text=""/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/nbVotersLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_below="@id/nbVoteAgainstLayout"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/nbVotersDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="Nombre de votants:"/>
            <TextView
                android:id="@+id/nbVoters"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:textSize="18sp"
                android:text=""/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/nbAbstentionLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_below="@id/nbVotersLayout"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/nbAbstentionDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:textSize="18sp"
                android:text="Nombre d'abstention:"/>
            <TextView
                android:id="@+id/nbAbstention"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:textSize="18sp"
                android:text=""/>
        </LinearLayout>
    </RelativeLayout>

    <include layout="@layout/footer" />

</RelativeLayout>